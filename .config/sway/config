set $mod Mod4

font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
set $term alacritty
bindsym $mod+Return exec $term -e zsh
#bindsym $mod+Return exec $term -e tmux

# kill focused window
bindsym $mod+Shift+q kill

# switch between workspaces
bindsym $mod+Tab workspace back_and_forth

# program launcher
# https://quinoa42.github.io/en/oceanus/replace-dmenu-with-fzf
for_window [app_id="fzfmenu"] floating enable
bindsym $mod+d exec $term --class "fzfmenu" -e zsh -c 'print -rl -- ${(ko)commands} | fzf | (nohup ${SHELL:-"/bin/sh"} &) >/dev/null 2>&1'

